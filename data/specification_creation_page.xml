<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Creating the creation page for the sample specification sheet-->
        <record id="specification_creation_page" model="survey.page">
            <field name="title">Creation</field>
            <field name="survey_id" ref="its_mrp_product_survey_sample.specification_sheet_sample"/>
        </record>

        <!-- Creating questions for the header section-->
        <record id="specification_question_is_composition" model="survey.question">
            <field name="question">Composition ?</field>
            <field name="column_nb">6</field>
            <field name="type">simple_choice</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_composition_number_hours" model="survey.question">
            <field name="question">If composition Number of hours: </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_selection_number_of_pictures" model="survey.question">
            <field name="question">Selection: Number of pictures:  </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_selection_format" model="survey.question">
            <field name="question">Selection: Format:  </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_selection_color" model="survey.question">
            <field name="question">Selection: Colors:  </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_imposition" model="survey.question">
            <field name="question">Imposition:  </field>
            <field name="type">free_text</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_format_film" model="survey.question">
            <field name="question">Photo engraving: Film - Format :  </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>
        <record id="specification_question_number_of_film" model="survey.question">
            <field name="question">Photo engraving: Number of Film:  </field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_creation_page"/>
        </record>

        <!--    Define the multiple choice value for some questions    -->
        <record id="specification_label_yes_its_a_composition" model="survey.label">
            <field name="value">YES</field>
            <field name="question_id" ref="its_mrp_product_survey_sample.specification_question_is_composition"/>
        </record>
        <record id="specification_label_its_not_a_composition" model="survey.label">
            <field name="value">NO</field>
            <field name="question_id" ref="its_mrp_product_survey_sample.specification_question_is_composition"/>
        </record>

    </data>
</odoo>


