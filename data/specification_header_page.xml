<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Creating the header page for the sample specification sheet-->
        <record id="specification_header_page" model="survey.page">
            <field name="title">Header</field>
            <field name="survey_id" ref="its_mrp_product_survey_sample.specification_sheet_sample"/>
        </record>

        <!-- Creating questions for the header page-->
        <record id="specification_question_name" model="survey.question">
            <field name="question">Name:</field>
            <field name="type">textbox</field>
            <field name="constr_mandatory">True</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_person_to_contact" model="survey.question">
            <field name="question">Person to contact:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_number" model="survey.question">
            <field name="question">Tel:</field>
            <field name="type">numerical_box</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_sale_order_number" model="survey.question">
            <field name="question">Sale Order N°:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_sale_order_date" model="survey.question">
            <field name="question">From:</field>
            <field name="type">date</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_quantity" model="survey.question">
            <field name="question">Quantity :</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_delivery_date" model="survey.question">
            <field name="question">Delivery: Date :</field>
            <field name="type">date</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_location" model="survey.question">
            <field name="question">Location :</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_to_be_delivered" model="survey.question">
            <field name="question">To be Delivered :</field>
            <field name="column_nb">6</field>
            <field name="type">simple_choice</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_general_folder" model="survey.question">
            <field name="question">General Folder: N°:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_folder_date" model="survey.question">
            <field name="question">Date:</field>
            <field name="type">date</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_folder_hours" model="survey.question">
            <field name="question">Hours:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_creation_number" model="survey.question">
            <field name="question">Creation N°:</field>
            <field name="type">free_text</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_creation_date" model="survey.question">
            <field name="question">Date:</field>
            <field name="type">date</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_creation_hours" model="survey.question">
            <field name="question">Hours:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_factory_i" model="survey.question">
            <field name="question">Factory I:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_factory_s" model="survey.question">
            <field name="question">Factory S:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_factory_a" model="survey.question">
            <field name="question">Factory A:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_factory_date" model="survey.question">
            <field name="question">Date:</field>
            <field name="type">date</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_factory_hours" model="survey.question">
            <field name="question">Hours:</field>
            <field name="type">textbox</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>
        <record id="specification_question_designation" model="survey.question">
            <field name="question">Designation:</field>
            <field name="type">free_text</field>
            <field name="page_id" ref="its_mrp_product_survey_sample.specification_header_page"/>
        </record>

        <!--    Answer label for simple choice questions    -->
        <record id="specification_label_deliver_after_payment" model="survey.label">
            <field name="value">After payment</field>
            <field name="question_id" ref="its_mrp_product_survey_sample.specification_question_to_be_delivered"/>
        </record>
        <record id="specification_label_deliver_after_production" model="survey.label">
            <field name="value">After production</field>
            <field name="question_id" ref="its_mrp_product_survey_sample.specification_question_to_be_delivered"/>
        </record>
    </data>
</odoo>


