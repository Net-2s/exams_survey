<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
    <template id="question_container_inherit" inherit_id="survey.question_container" name="Survey: question container">

        <xpath expr="//div[@t-field='question.description']" position="before">
            <div t-if="question.question_image or question.question_audios " t-field='question.description' class="">
                <div t-if="question.question_image" t-field="question.question_image"
                class=" d-flex my-3 justify-content-center"
                t-options="{'widget': 'image', 'alt-field': 'name', 'itemprop': 'image'}"/>
                
            </div>
           <t t-foreach="question.question_audios" t-as="audio">
                <div>
                    <audio controls="1" autoplay="1" style="width: 100%">
                        <source t-att-src="'/web/content/' + str(audio.id) + '?download=true'" type="audio/mpeg"/>
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </t>
            
        </xpath>
    </template>

    <template id="survey_fill_form_done_inherit_test" inherit_id="survey.survey_fill_form_done">
            <xpath  expr="//div[hasclass('o_survey_finished')]/div[@class='row']/div" position="replace">
                <div class="col">
                    <t t-if="survey.scoring_type != 'no_scoring' and survey.scoring_success_min">
                        <div>Félicitqtion vous avez terminé le test!</div>
                        <div>Vous avez obtenu un total de <strong> <t t-esc="answer.scoring_total"/> points (<t t-esc="answer.scoring_percentage" />%) </strong></div>
                        <div>De ce faites, vous devez suivre un minimun de <t t-esc="answer._compute_recommended_hours()" /> heures de cours</div>
                    </t>
                    <!-- <t t-call="survey.survey_button_retake"/>
                    <div t-if="survey.scoring_type != 'scoring_without_answers'" class="o_survey_review">
                        If you wish, you can <a t-att-href="'/survey/print/%s?answer_token=%s&amp;review=True' % (survey.access_token, answer.access_token)">review your answers</a>
                    </div> -->
                </div>
            
            </xpath>
        
    </template>
    
    </data>
    

</odoo>
